@media screen {
    .logo {
        width: 90px;
        height: 50px;
        background:white;
    }
    #logo {
        width:68px;
        height: 50px;
        background: url(logo_png) no-repeat bottom;
        background-size: contain;
        display: block;
        text-decoration: none;
        font-size: 0;
    }
    #rdlogo {
        height: 50px;
        background: url(rdlogo) no-repeat bottom;
        background-size: contain;
        display: block;
        text-decoration: none;
        font-size: 0;
    }
    #title {
        color: white;
        text-align: center;
    }
    #message {
        color: white;
    }
    .myheight {
        margin-top:10px;
        height: 100px;
    }
    .vcenter {
        display: inline-block;
        vertical-align: middle;
        float: none;
    }

    #menucontent {
        width: 100%;
        position: fixed;
        height: 140px;
        background: #00A6D6;
        z-index:10;
    }
    #apicontent {
        position: absolute;
        width: 100%;
        height: 100%;
        margin-left: auto ;
        margin-right: auto ;
        top: 140px;
        z-index:5;
        /*overflow-y: scroll;*/
    }
    /* wrapper for page content to fix header */
    .header {
        position: fixed;
        margin: 6mm;
    }

    /* Wrapper for page content to push down footer */
    .wrap {
        min-height: 100%;
        height: auto;
        /* Negative indent footer by its height */
        margin: 0 auto -3cm;
        /* Pad bottom by footer height */
        padding: 0 0 2cm;
    }

    /* Set the fixed height of the footer here */
    .footer {
        height: 45mm;
        background-color: #f5f5f5;
    }


    @page {
        size: 148mm 210mm;
        margin: 0mm 4mm 0mm 4mm;
/*  text on top or bottom doesn't work? 
 *  @bottom-center {content:"Library";}
 */
    }
}

@media print {
    @page {
        size: 148mm 210mm;
        margin-left: 4mm;
        margin-right: 4mm;
        margin-bottom: 0mm;
        margin-top:2mm;
/*  text on top or bottom doesn't work? 
 *   *  @bottom-center {content:"Library";}
 *    */
    }

    html,
    body {
        width: 100%;
        height: 99%;  /* to prevent extra blank page */
        margin-left: auto ;
        margin-right: auto ;
    }

    #apicontent {
        width: 100%;
        height: 100%;
        margin-left: auto ;
        margin-right: auto ;
    }

    /* wrapper for page content to fix header */
    .header {
        position: fixed;
        margin: 0mm;
    }

    /* Wrapper for page content to push down footer */
    .wrap {
        min-height: 100%;
        height: auto;
        /* Negative indent footer by its height */
        margin: 4mm auto -41mm;
        /* Pad bottom by footer height */
        padding: 0 0 41mm;
    }

    /* Set the fixed height of the footer here */
    .footer {
        height: 40mm;
        /* background-color: #f5f5f5; */
    }
    /*
    aside#sidebar,header[role="banner"],footer,#comments,#respond {
        display: none;
    }
    */


    input {display:none;}
    .noprint {display:none;}
    .newpage {
        /* page-break-inside:avoid;*/
        page-break-after: always;
    }
}

